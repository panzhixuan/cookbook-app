<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/cookbookdetailpage"
              android:background="@drawable/background">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/cookbookname"
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:layout_height="wrap_content"
                        android:text="四川辣子鸡"
                        android:textColor="@android:color/black"
                        android:textSize="25dp"/>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="bottom">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="来自："
                            android:textColor="#B35513"
                            android:textSize="15dp"/>
                    <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="喵喵"
                            android:textColor="#B35513"
                            android:textSize="15dp"/>
                </LinearLayout>
                <Button
                        android:background="@drawable/caishi_shape"
                        android:id="@+id/favor"
                        android:text="添加收藏"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="30dp"
                        android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/transparent2">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="标签："
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"/>
                <TextView
                        android:id="@+id/caishi"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_gravity="center"/>
                <TextView
                        android:id="@+id/caixi"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_gravity="center"/>
                <TextView
                        android:id="@+id/changhe"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:background="@drawable/transparent2"
                    android:layout_marginTop="10dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="成果图："
                        android:textColor="@android:color/black"
                        android:textSize="25dp"
                        android:layout_gravity="center"/>
                <ImageView
                        android:id="@+id/cover"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="150dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="50dp"
                        android:src="@drawable/uploadpic"
                        android:scaleType="centerCrop" />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/transparent2">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="养生必读："
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:layout_gravity="top" />
                <TextView
                        android:id="@+id/nutrition"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:singleLine="false"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/transparent2">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="用料："
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:layout_gravity="top" />
                <LinearLayout
                        android:id="@+id/material_list"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/transparent2">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="做法："
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:layout_gravity="top" />
                <LinearLayout
                        android:id="@+id/step_list"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/transparent2">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="小贴士："
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:layout_gravity="top" />
                <TextView
                        android:id="@+id/tips"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/transparent2">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:text="评论："
                            android:textColor="@android:color/black"
                            android:textSize="18dp"
                            android:layout_gravity="top"/>
                </LinearLayout>
                <com.example.cookbook.view.MyListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/listview">
                </com.example.cookbook.view.MyListView>
                <Button
                    android:id="@+id/publish"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:background="@color/green"
                    android:layout_marginTop="5dp"
                    android:text="添加评论" />
                <Button
                        android:visibility="gone"
                        android:id="@+id/delpublish"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:background="@color/red"
                        android:layout_marginTop="5dp"
                        android:text="删除评论" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
